---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link 
      rel="alternate" 
      type="application/rss+xml" 
      title="Tustin Recruiting RSS Feed" 
      href="/rss.xml"
    />
  </head>
  <body>
    <slot />
  </body>
</html> 