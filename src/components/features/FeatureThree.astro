---
import { Code } from "astro/components";
const features = [
  {
    title: "JavaScript Engineers",
    description: 
      "Full-stack experts in React, Vue, Node.js and modern web architectures.",
  },
  {
    title: "AI/Python Engineers",
    description: "Specialists in machine learning, data science, and AI model development.",
  },
];
---

<section class="bg-white">
  <div class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 mt-16 mb-36">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-24 items-start">
      <div>
        <span class="text-sm font-medium tracking-wide text-blue-600 uppercase"
          >Engineering Excellence</span
        >
        <h2
          class="text-purple-900 font-semibold tracking-tight lg:text-5xl mt-6 text-3xl">
          Top-Tier Software Engineers
        </h2>
        <p class="text-slate-500 mt-5">
          We connect companies with exceptional software engineering talent who drive innovation and results.
          Our engineers bring deep expertise in modern JavaScript frameworks and cutting-edge AI technologies.
          <br />
          <br />
          From scalable web applications to advanced machine learning systems, our candidates combine
          technical mastery with practical business impact.
        </p>
        <ul
          role="list"
          class="grid grid-cols-2 gap-4 list-none lg:gap-6 mt-12">
          {
            features.map((feature) => (
              <li>
                <p class="font-semibold text-purple-900 text-base">
                  {feature.title}
                </p>
                <div class="mt-2 text-slate-500 text-sm">
                  {feature.description}
                </div>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="lg:mt-0 mt-12 h-full lg:order-first">
        <div class="lg:mt-0 mt-12 h-full">
          <div
            x-data="{
        tabSelected: 1,
        tabId: $id('tabs'),
        tabButtonClicked(tabButton){
            this.tabSelected = tabButton.id.replace(this.tabId + '-', '');
            this.tabRepositionMarker(tabButton);
        },
        tabRepositionMarker(tabButton){
            this.$refs.tabMarker.style.width=tabButton.offsetWidth + 'px';
            this.$refs.tabMarker.style.height=tabButton.offsetHeight + 'px';
            this.$refs.tabMarker.style.left=tabButton.offsetLeft + 'px';
        },
        tabContentActive(tabContent){
            return this.tabSelected == tabContent.id.replace(this.tabId + '-content-', '');
        }
    }"
            x-init="tabRepositionMarker($refs.tabButtons.firstElementChild);"
            class="relative lg:rounded-3xl">
            <div
              x-ref="tabButtons"
              class="relative inline-grid items-center justify-center w-full h-10 grid-cols-2 p-1 bg-slate-100 rounded-full select-none">
              <button
                :id="$id(tabId)"
                @click="tabButtonClicked($el);"
                type="button"
                class="relative z-20 inline-flex items-center justify-center w-full h-8 px-3 text-sm font-medium transition-all rounded-full cursor-pointer whitespace-nowrap"
                >JavaScript</button
              >
              <button
                :id="$id(tabId)"
                @click="tabButtonClicked($el);"
                type="button"
                class="relative z-20 inline-flex items-center justify-center w-full h-8 px-3 text-sm font-medium transition-all rounded-md cursor-pointer whitespace-nowrap"
                >AI/Python</button
              >
              <div
                x-ref="tabMarker"
                class="absolute left-0 z-10 w-1/2 h-full duration-300 ease-out"
                x-cloak>
                <div class="w-full h-full bg-white rounded-full shadow-sm">
                </div>
              </div>
            </div>
            <div
              class="relative w-full mt-2 content p-4 bg-[#14162a] rounded-3xl">
              <div
                :id="$id(tabId + '-content')"
                x-show="tabContentActive($el)"
                class="relative">
                <section
                  class="text-xs font-mono mt-4 rounded-3xl hadow-2xl overflow-hidden h-full p-4">
                  <Code
                    code={`// Modern JavaScript Stack Expertise

const engineerCapabilities = {
  frontendFrameworks: ['React', 'Vue', 'Next.js', 'Nuxt'],
  backendTechnologies: {
    runtime: 'Node.js',
    frameworks: ['Express', 'NestJS', 'Fastify'],
    databases: ['MongoDB', 'PostgreSQL', 'Redis']
  },
  modernPractices: {
    architecture: ['Microservices', 'JAMstack', 'Serverless'],
    testing: ['Jest', 'Cypress', 'Testing Library'],
    deployment: ['Docker', 'AWS', 'Vercel']
  }
};

// Key Strengths
const expertise = [
  'Full Stack Development',
  'Performance Optimization',
  'Scalable Architecture Design',
  'Real-time Applications'
];`}
                    lang="js"
                    theme="css-variables"
                  />
                </section>
              </div>
              <div
                :id="$id(tabId + '-content')"
                x-show="tabContentActive($el)"
                class="relative"
                x-cloak>
                <section
                  class="text-xs font-mono mt-4 rounded-3xl hadow-2xl overflow-hidden h-full p-4">
                  <Code
                    code={`# AI and Machine Learning Expertise

class AIEngineer:
    def __init__(self):
        self.core_skills = {
            'frameworks': ['PyTorch', 'TensorFlow', 'Scikit-learn'],
            'specialties': ['NLP', 'Computer Vision', 'Deep Learning'],
            'data_engineering': ['Pandas', 'PySpark', 'Numpy']
        }
        
        self.domains = {
            'ml_ops': ['MLflow', 'Kubeflow', 'DVC'],
            'cloud_platforms': ['AWS SageMaker', 'Google AI', 'Azure ML'],
            'deployment': ['FastAPI', 'Docker', 'Kubernetes']
        }

    def key_achievements(self):
        return [
            'Production ML Systems',
            'Model Optimization',
            'Large Language Models',
            'Real-time Inference'
        ]`}
                    lang="python"
                    theme="css-variables"
                  />
                </section>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
