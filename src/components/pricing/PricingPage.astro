---
const pricingPlans = [
  {
    name: "Free",
    monthlyPrice: "0",
    annualPrice: "0",
    description:
      "Perfect for those needing just 1 job posting",
    cardBgClass: "bg-white", 
    descriptionColor: "text-slate-500",
    buttonClass: "bg-blue-100 hover:bg-blue-50 text-blue-600",
    links: {
      monthly: "mailto:will@tustinrecruiting.com",
      annual: "https://cnn.com"
    },
    features: [
      "1 job posting",
      "30-day listing",
      "Candidates emailed directly to you"
    ],
    unavailableFeatures: [
      "Featured job listing",
      "Additional sourcing support",
      "Resume database access",
      "Applicant tracking system",
      "Dedicated account manager"
    ],
  },
  {
    name: "Starter",
    monthlyPrice: "299",
    annualPrice: "249",
    description: "Ideal for growing and mid-size companies",
    cardBgClass: "bg-white",
    descriptionColor: "text-slate-500", 
    buttonClass: "bg-blue-500 hover:bg-blue-600 text-white",
    links: {
      monthly: "https://buy.stripe.com/fZe17Xb14aiCcec8wy",
      annual: "https://buy.stripe.com/3cs8Apc584Yiemk003"
    },
    features: [
      "5 active job postings",
      "30-day listings",
      "Featured job listings",
      "Email blasts to candidates",
      "Dedicated account manager",
      "Phone & email support"
    ],
    unavailableFeatures: [
      "Custom hiring workflows"
    ],
  },
  {
    name: "Growth",
    monthlyPrice: "899",
    annualPrice: "699", 
    description:
      "For larger companies with ongoing hiring needs",
    cardBgClass: "bg-white",
    descriptionColor: "text-slate-500",
    buttonClass: "bg-blue-100 hover:bg-blue-50 text-blue-600",
    links: {
      monthly: "https://buy.stripe.com/aEU2c1glo2Qaba86os",
      annual: "https://buy.stripe.com/eVa5od9X09ey1zy8wB"
    },
    features: [
      "25 job postings",
      "30-day listings",
      "Premium featured placement",
      "ATS integration to your parsing email",
      "Email blasts to candidates",
      "Dedicated account manager",
      "Priority support"
    ],
    unavailableFeatures: [],
  },
];

const extended = [
  {
    title: "Targeted Job Distribution",
    benefits: [
      "Post to multiple job boards",
      "Social media promotion",
      "SEO optimization for listings"
    ],
  },
  {
    title: "Employer Branding",
    benefits: [
      "Custom company profiles",
      "Media-rich job postings",
      "Branded career pages"
    ],
  },
  {
    title: "Premium Support",
    benefits: [
      "Dedicated account manager",
      "24/7 customer service",
      "Recruitment strategy consulting"
    ],
  },
];
---

<section x-data="{ 
  annual: false,
  openLink(monthlyLink, annualLink) {
    window.open(this.annual ? annualLink : monthlyLink, '_blank');
  }
}">
  <div class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 pb-12 pt-24">
    <div class="text-center">
      <span class="text-sm uppercase font-medium tracking-wide text-blue-600"
        >pricing</span
      >
      <h1
          class="text-purple-900 font-semibold mt-6 text-4xl lg:text-5xl tracking-tight">
          Post a Job
        </h1>
      <p class="text-slate-500 mt-5 md:text-balance md:w-1/2 mx-auto">
        Post a job with us and find qualified applicants faster. Choose the plan that works best for you.
      </p>
      <div class="md:max-w-sm mx-auto mt-12">
        <div
          class="inline-flex w-full border rounded-full mt-6 overflow-hidden bg-white p-0.5 z-0">
          <button
            class="text-black font-medium border rounded-full transition w-full py-2 block border-transparent px-8 text-xs"
            @click="annual = false"
            :class="annual == false ? 'bg-slate-100 border text-black ' : ''"
            type="button"
            >Monthly</button
          >
          <button
            class="text-black font-medium border rounded-full transition w-full py-2 block border-transparent px-8 text-xs"
            @click="annual = true"
            :class="annual == true ? 'bg-slate-100 border text-black' : ''"
            type="button"
            >Annual</button
          >
        </div>
      </div>
    </div>
    <div class="mt-16 grid md:grid-cols-2 sm:mx-auto lg:grid-cols-3 gap-12">
      {
        pricingPlans.map((plan) => (
          <section>
            <div
              class={` ${plan.cardBgClass}  flex flex-col  justify-between w-full  `}>
              <div>
                <div class="space-y-4 ">
                  <div class="flex gap-1 items-end ">
                    <p class={` text-purple-900`}>
                      <span class="text-5xl font-light tracking-tight    ">
                        <span x-show="!annual">${plan.monthlyPrice}</span>
                        <span x-show="annual">${plan.annualPrice}</span>
                      </span>
                      /
                    </p>

                    <span
                      class={`text-sm font-medium block ${plan.descriptionColor}`}>
                      Monthly
                      <span
                        x-show="annual"
                        style="display: none;">
                        (billed annually)
                      </span>
                    </span>
                  </div>
                  <p class={`text-lg   text-purple-900`}>{plan.name}</p>
                  <p class={`text-sm lg:text-pretty ${plan.descriptionColor}`}>
                    {plan.description}
                  </p>
                </div>
              </div>
              <div class="flex mt-6">
                <template x-if="!annual">
                  <a
                    href={plan.links.monthly}
                    target="_blank"
                    class={`inline-flex items-center justify-center px-6 py-3.5 rounded-full w-full font-medium ${plan.buttonClass}`}
                  >
                    Get started
                  </a>
                </template>
                
                <template x-if="annual">
                  <a
                    href={plan.links.annual}
                    target="_blank"
                    class={`inline-flex items-center justify-center px-6 py-3.5 rounded-full w-full font-medium ${plan.buttonClass}`}
                  >
                    Get started
                  </a>
                </template>
              </div>
              <ul
                class={`flex flex-col order-last mt-8 text-sm ${plan.descriptionColor} gap-y-3`}>
                {plan.features.map((feature) => (
                  <li class="inline-flex items-center gap-2">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="icon icon-tabler icon-tabler-circle-check"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round">
                      <path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      />
                      <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
                      <path d="M9 12l2 2l4 -4" />
                    </svg>
                    {feature}
                  </li>
                ))}
                {plan.unavailableFeatures.map((feature) => (
                  <li
                    class={`inline-flex items-center gap-2 ${plan.descriptionColor} line-through opacity-50`}>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="icon icon-tabler icons-tabler-outline icon-tabler-xbox-x">
                      <path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      />
                      <path d="M12 21a9 9 0 0 0 9 -9a9 9 0 0 0 -9 -9a9 9 0 0 0 -9 9a9 9 0 0 0 9 9z" />
                      <path d="M9 8l6 8" />
                      <path d="M15 8l-6 8" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          </section>
        ))
      }
    </div>

    <div class="mt-24">
      <span class="text-sm uppercase font-medium tracking-wide text-blue-600"
        >features</span
      >
      <h2
        class="text-purple-900 font-semibold tracking-tight lg:text-5xl mt-6 text-3xl">
        Why post with us?
      </h2>
      <div class="max-w-xl mt-6">
        <p class="text-slate-500">
          Our job postings are published to Google Jobs and integrate with other job boards including ZipRecruiter. Plus, nobody knows Orange County better than we do.
        </p>
      </div>
    </div>
    <div
      class="gap-x-2 gap-y-14 lg:gap-12 grid sm:grid-cols-2 mt-12 lg:grid-cols-3">
      {
        extended.map((feature) => (
          <div>
            <p class="font-semibold text-purple-900 text-base">
              {feature.title}
            </p>
            <div class="mt-6">
              <ul
                role="list"
                class="flex flex-col gap-y-2 text-slate-500 text-sm">
                {feature.benefits.map((benefit) => (
                  <li class="flex items-start">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="icon icon-tabler icon-tabler-circle-check"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round">
                      <path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      />
                      <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
                      <path d="M9 12l2 2l4 -4" />
                    </svg>
                    <span class="ml-4">{benefit}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
