---
interface Props {
  frontmatter: {
    term: string;
    category: string;
    vertical: string;
    description: string;
  };
}

const { frontmatter } = Astro.props;

const featuresOne = [
  {
    title: `${frontmatter.vertical} Recruiting Expertise`,
    description:
      `20+ years of combined proven success in Orange County, specializing in ${frontmatter.vertical} recruitment within the ${frontmatter.category} sector.`,
  },
  {
    title: "Local Market Knowledge",
    description:
      `Deep understanding of Orange County's ${frontmatter.vertical} talent landscape, offering personalized recruitment solutions for ${frontmatter.category} teams.`,
  },
  {
    title: `${frontmatter.category} Recruiting Results`,
    description:
      `95% first-year retention rate with successful ${frontmatter.vertical} placements, demonstrating our expertise in ${frontmatter.category} recruitment.`,
  },
];
---

<section>
  <div
    class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 py-24">
    <div>
      <span class="text-sm uppercase font-medium tracking-wide text-blue-600"
        >Hire Top {frontmatter.vertical} Talent</span
      >
      <h2
        class="text-purple-900 font-semibold tracking-tight lg:text-5xl mt-6 text-3xl">
        {frontmatter.category} Recruiting
      </h2>
      <div class="max-w-xl mt-6">
        <p class="text-slate-500">
          Looking for exceptional {frontmatter.vertical} talent in Orange County? Our proven direct hire recruiting 
          process connects you with pre-screened, qualified {frontmatter.category} professionals ready to contribute 
          to your company's success from day one.
        </p>
      </div>
      <div class="mt-10">
        <a
          class="text-white items-center font-medium gap-3 inline-flex focus-visible:outline-2 focus-visible:outline-offset-2 focus:outline-none justify-center px-6 lg:px-8 ring-2 ring-transparent focus:ring-offset-2 focus:ring-blue-500 duration-200 py-3.5 rounded-full active:bg-blue-800 active:text-white bg-blue-500 hover:bg-blue-600 w-auto"
          title="Contact Us"
          aria-label="Contact Us"
          href="/contact">
          Hire {frontmatter.vertical} Talent
        </a>
      </div>
    </div>
    <div
      class="gap-x-2 gap-y-14 lg:gap-12 grid grid-cols-1 lg:grid-cols-3 mt-12">
      {
        featuresOne.map((item, index) => (
          <>
            <div class="space-y-3">
              <div class="lg:inline-flex lg:items-center lg:gap-3">
                <div class="flex items-center justify-center size-8 text-blue-500 rounded-full bg-slate-100">
                  {index + 1}
                </div>
                <h3 class="mt-5 font-semibold text-purple-900 lg:mt-0 ">
                  {item.title}
                </h3>
              </div>
              <p class="text-sm text-slate-500  lg:text-pretty">
                {item.description}
              </p>
            </div>
          </>
        ))
      }
    </div>
  </div>
</section>